<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="740dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/teal_border"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_one"
                android:text="Upload Book"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/upload_image"
                android:layout_width="331dp"
                android:layout_height="184dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/uploading" />

            <EditText
                android:id="@+id/upload_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/teal_border"
                android:fontFamily="@font/baloo_bhaina_2_medium"
                android:gravity="start|center_vertical"
                android:hint="Enter Book Title"
                android:padding="16dp"
                android:textColor="@color/teal_700" />

            <EditText
                android:id="@+id/upload_author"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/teal_border"
                android:fontFamily="@font/baloo_bhaina_2_medium"
                android:gravity="start|center_vertical"
                android:hint="Enter Author"
                android:padding="16dp"
                android:textColor="@color/teal_700" />

            <EditText
                android:id="@+id/upload_desc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/teal_border"
                android:fontFamily="@font/baloo_bhaina_2_medium"
                android:gravity="start|center_vertical"
                android:hint="Enter Description"
                android:padding="16dp"
                android:singleLine="false"
                android:textColor="@color/teal_700" />

            <EditText
                android:id="@+id/upload_language"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/teal_border"
                android:fontFamily="@font/baloo_bhaina_2_medium"
                android:gravity="start|center_vertical"
                android:hint="Enter Language"
                android:padding="16dp"
                android:textColor="@color/teal_700" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Save"
                android:textSize="18sp"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>